{
    "name": "stevegrunwell/pupper",
    "type": "project",
    "description": "A Twitter clone for use in training courses.",
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.8.*",
        "laravel/tinker": "^1.0"
    },
    "require-dev": {
        "beyondcode/laravel-dump-server": "^1.0",
        "filp/whoops": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "^1.4",
        "laravel/homestead": "^8.6",
        "mockery/mockery": "^1.0",
        "mohammedmanssour/form-request-tester": "dev-master",
        "nunomaduro/collision": "^3.0",
        "nunomaduro/larastan": "^0.3.17",
        "phpunit/phpunit": "^8.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "coding-standards": [
            "@php vendor/bin/phpcs",
            "@php vendor/bin/php-cs-fixer fix --dry-run --verbose"
        ],
        "homestead": [
            "@prepare-env",
            "@php vendor/bin/homestead make"
        ],
        "prepare-env": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate --ansi"
        ],
        "static-analysis": [
            "@php artisan code:analyse"
        ]
    },
    "scripts-descriptions": {
        "coding-standards": "Check the application coding standards.",
        "homestead": "Build a development environment using Laravel Homestead.",
        "prepare-env": "Copy the .env.example file and generate an application key.",
        "static-analysis": "Perform static code analysis on the codebase."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    }
}
